<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="227dp"
        android:layout_height="53dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="40dp"
        android:text="ĐĂNG NHẬP"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtNEmail"
        android:layout_width="317dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColorHint="@color/gray"
        android:textColor="@color/gray"
        android:paddingLeft="10dp"
        android:background="@drawable/bottomborder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/edtNPassword"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/gray"
        android:textColor="@color/gray"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:background="@drawable/bottomborder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNEmail" />

    <Button
        android:id="@+id/btnCreateAcc"
        android:layout_width="317dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@null"
        android:backgroundTint="#000000"
        android:onClick="weeklyAction"
        android:text="Đăng nhập"
        android:textColor="#2FFF00"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvForgetPassword" />

    <TextView
        android:id="@+id/tvCreateAccount"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="255dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:text="Đăng ký"
        android:textSize="16sp"
        android:textColor="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateAcc" />

    <TextView
        android:id="@+id/tvForgetPassword"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:text="Quên mật khẩu ?"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNPassword" />

<!--    <ImageView-->
<!--        android:id="@+id/imgvGoogle"-->
<!--        android:layout_width="48dp"-->
<!--        android:layout_height="41dp"-->
<!--        android:layout_marginStart="120dp"-->
<!--        android:layout_marginTop="30dp"-->
<!--        android:layout_marginEnd="120dp"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/tvCreateAccount"-->
<!--        tools:srcCompat="@tools:sample/avatars" />-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rimgGoogle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="120dp"
        android:src="@drawable/ic_google"
        android:visibility="gone"
        app:civ_border_color="@color/gray"
        app:civ_border_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCreateAccount" />
</androidx.constraintlayout.widget.ConstraintLayout>